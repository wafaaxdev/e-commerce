<%- include('parts/header') %> 
<%- include('parts/navbar') %>
<div class="container">
<p>
    <h3>
        Orders
    </h3>
</p>
</div>
<div class="container">
    <table class="table">
        <thead class="thead-light">
        <tr>
            <th scope="col">no</th>
            <th scope="col">Product name</th>
            <th scope="col">Cost</th>
            <th scope="col">Quantity</th>
            <th scope="col">Status</th>
            <th scope="col">Address</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
            <% for( let i = 0; i < orders.length; i++ ) { %>
                <tr>
                    <th scope="row"><%= i+1 %>   </th>
                    <td> <%= orders[i].name %>   </td>
                    <td> <%= orders[i].totalprice %> $ </td>
                    <td> <%= orders[i].qty %>    </td>
                    <td> <%= orders[i].status%>  </td>
                    <td> <%= orders[i].address%> </td>
                    <form method="POST">
                        <td> 
                            <input type="hidden" name="orderId" value="<%= orders[i]._id %> ">
                            <input type="submit" value="Cancel" class="btn btn-danger" formaction="/order/delete">                                
                        </td>
                    </form>
                    
                </tr>
            <% } %>
        </tbody>                         
    </table>
    <form action="/order/delete_all" method="post">  
        <div class="float-right">        
            <input type="submit" value="Delete All" class="btn btn-danger pull-right">
        </div>  
    </form>  
</div>
<%- include('parts/footer') %> 