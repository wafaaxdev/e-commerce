<%- include('parts/header')  %> 
<%- include('parts/navbar')  %> 

<div class="container">
    <h3>SignUp</h3>
    <form action="/signup" method="POST">
        <input type="text" name="username" class="form-control control-sm" placeholder="Username" >  
            <% let usernameError = validationErrors.find(err=>err.param ==='username') %>       
                <% if (usernameError) { %> 
                    <p class="alert alert-danger">
                        <%= usernameError.msg %>
                    </p>
                <% } %> 
        <input type="email" name="email" class="form-control control-sm" placeholder="email">
            <%  let emailError = validationErrors.find(err => err.param === 'email')%>
                <% if (emailError) {%> 
                    <p class="alert alert-danger">
                        <%= emailError.msg  %> 
                    </p>
                <% } %> 
        
        <input type="password" name="password" class="form-control control-sm" placeholder="Password" >
            <% let passwordError = validationErrors.find(err=> err.param ==='password') %> 
                <% if (passwordError){ %> 
                    <p class="alert alert-danger">
                        <%= passwordError.msg  %> 
                    </p>
                <% } %> 
        
        <input type="password" name="confirmpassword" class="form-control control-sm" placeholder="Confirm password" >
            <% let confirmpasswordError = validationErrors.find(err=>err.param==='confirmpassword') %> 
                <% if(confirmpasswordError){ %> 
                    <p class="alert alert-danger">
                        <%= confirmpasswordError.msg  %> 
                    </p>
                <% } %> 
        <input type="submit" value="Create Account" class="btn btn-primary" >
    </form>
    <br>
    <div>
        Already have account ? <a href="/login">Login</a>
    </div>
</div>
     

<%- include('parts/footer') %> 