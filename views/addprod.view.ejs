<%- include('parts/header') %> 
<%- include('parts/navbar') %>
<div class="container">
    <h3>Add products</h3>
</div>

<% if (validationErrors) { %> 
  <div class="container">
    <p class="alert alert-danger">
        <%= validationErrors.msg %>
    </p>
</div>
<% } %>
<div class="container">
    <form action="/admin/add" method="POST" enctype="multipart/form-data">
        
        <div class="form-group">
          <input type="text" name="name" class="form-control"  placeholder="Product name">
        </div>
        <div class="form-group">
          <input type="text" name="description" class="form-control" placeholder="Product description">
        </div>
        <div class="form-group">
            <input type="number" name="price" class="form-control" placeholder="Product price">
          </div>
          <select name="category" class="form-control" >            
            <option value="men clothes">Men clothes</option>
            <option value="Smart phone">Smart phone</option>
            <option value="Laptop">Laptop</option>
            <option value="women pij amas">Women pijamas</option>
          </select>
        <br>
        <label for="exampleFormControlFile">Product image</label>
        <input type="file" class="form-control-file" name="image" placeholder="image" >
        <br>
        
            <input type="submit" value="Add" class="btn btn-primary">
        
        
      </form>
</div>


<%- include('parts/footer') %> 